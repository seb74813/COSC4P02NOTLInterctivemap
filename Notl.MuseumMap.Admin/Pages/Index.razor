@page "/"
@inherits BasePage

<BusyIndicator Model="@this" />
<PageTitle>@Localizer["AppName"]</PageTitle>

@if (!IsBusy)
{
    <MudPaper Class="pa-3" Elevation="0">
        <MudButton OnClick=@move></MudButton>
    </MudPaper>
}

@code
{
    SampleData? data;

    protected async override Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        IsInitialized = true;

        try
        {
            IsBusy = true;
            data = await ClientContext.Admin.PingAuthAsync("Hello World");
            IsBusy = false;
        }
        catch (Exception ex)
        {
            ShowError(ex);
        }
    }

    private void move()
    {
        Navigation.NavigateTo("initialize", true);
    }
}
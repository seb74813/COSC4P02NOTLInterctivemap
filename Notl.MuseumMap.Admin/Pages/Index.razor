@page "/"
@inherits BasePage
@attribute [Authorize]

<BusyIndicator Model="@this" />
<PageTitle>@Localizer["AppName"]</PageTitle>

@if (!IsBusy)
{
    <MudPaper Class="pa-3" Elevation="0">
        <MudButton OnClick=@move>Go</MudButton>
    </MudPaper>
}

@code
{

    protected async override Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        IsInitialized = true;

        try
        {
            IsBusy = true;
            IsBusy = false;
        }
        catch (Exception ex)
        {
            ShowError(ex);
        }
    }

    private void move()
    {
        Navigation.NavigateTo("initialize");
    }
}
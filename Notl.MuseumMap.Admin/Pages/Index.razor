@page "/"
@inherits BasePage
@attribute [Authorize]

<BusyIndicator Model="@this" />
<PageTitle>@Localizer["AppName"]</PageTitle>

@if (!IsBusy)
{
    <MapEditor MapData="map" POIs="pois" />
}

@code
{
    private List<POIModel>? pois;
    private MapModel? map;

    protected async override Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        IsInitialized = true;

        try
        {
            IsBusy = true;
            map = await ClientContext.Admin.GetActiveMapAuthAsync();
            pois = await ClientContext.Admin.GetPOIsAuthAsync(map.Id);

            Console.WriteLine($"POIs loaded: {pois.Count}");
            IsBusy = false;
        }
        catch (Exception ex)
        {
            ShowError(ex);
        }
    }

    private void move()
    {
        Navigation.NavigateTo("initialize");
    }
}
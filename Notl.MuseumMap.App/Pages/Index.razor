@page "/"
@inherits BasePage

<BusyIndicator Model="@this" />
<PageTitle>@Localizer["AppName"]</PageTitle>

@if (!IsBusy)
{
    <Map MapData="map" POIs="pois"></Map>
}

@code
{

    private List<POIModel>? pois;
    private MapModel? map;

    protected async override Task OnInitializedAsync()
    {
        IsInitialized = true;

        try
        {
            IsBusy = true;
            pois = new List<POIModel>
            {
               new POIModel{X=850,Y=500},
               new POIModel{X=650,Y=500},
               new POIModel{X=450,Y=450},
               new POIModel{X=1200,Y=450},
               new POIModel{X=1200,Y=250},
            };
            map = new MapModel { Image = new ImageReference { Url = "newmap.png" } };
            //map = await ClientContext.Maps.GetActiveMapAsync();
            //pOIs = await ClientContext.Maps.GetPOIsAsync();
            IsBusy = false;
        }
        catch(Exception ex)
        {
            ShowError(ex);
        }
    }
}